#!/bin/bash

unixpath=`winepath -u $@`
if [ -d $unixpath ]; 
then
	cd $unixpath;
	physicpath=`pwd -P`;
	cd -;
	exec nautilus $physicpath;
elif [ -f $unixpath ];
then
	dir=`dirname $unixpath`;
	file=`basename $unixpath`;
	cd $dir;
	phydir=`pwd -P`;
	cd -;
	phypath=${phydir}/${file};
	exec gedit $phypath;
fi
